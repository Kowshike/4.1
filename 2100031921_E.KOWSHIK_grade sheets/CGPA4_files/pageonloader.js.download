$(document).ready(function(){

    //When clicking on a button, it shows the loader

    $('.btnloader').on('click', function(){
        setTimeout(function(){
        $('#loader').show();
        }, 30);

    });

});

$(document).ajaxStart(function(){

    $('#loader').show();
}).ajaxStop(function(){
    $('#loader').hide();
});



